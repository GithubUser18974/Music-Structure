<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mohamed_araby.mediaplayer.PlayList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gotohome_plylistactivtity"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="32dp"
            android:background="@drawable/ic_home_black_24dp"

            />

        <Button
            android:id="@+id/gotofavourite_plylistactivtity"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/ic_favorite_black_24dp"

            />

        <Button
            android:id="@+id/gotorecentplayed_plylistactivtity"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/ic_recent_actors_black_24dp"

            />

        <Button
            android:id="@+id/gotcurrentplaying_plylistactivtity"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rsz_2currentplaying"

            />

    </LinearLayout>

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:background="@drawable/plus"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ECEFF1"

        />

    <ListView
        android:id="@+id/listview_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>


</LinearLayout>
